<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:stretchColumns="1">

    <!-- First row -->
    <TableRow>

        <!-- start in column 1 -->
        <TextView
            android:layout_column="1"
            android:padding="3dp"
            android:text="@string/open_string"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="?android:textColorSecondary" />

        <TextView
            android:gravity="right"
            android:padding="3dp"
            android:text="@string/ctrl_o_string"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="?android:textColorSecondary" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_column="1"
            android:padding="3dp"
            android:text="@string/save_string"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="?android:textColorSecondary" />

        <TextView
            android:gravity="right"
            android:padding="3dp"
            android:text="@string/ctrl_s_string"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="?android:textColorSecondary" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_column="1"
            android:padding="3dp"
            android:text="@string/save_as_string"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="?android:textColorSecondary" />

        <TextView
            android:gravity="right"
            android:padding="3dp"
            android:text="@string/ctrl_shift_s_string"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="?android:textColorSecondary" />
    </TableRow>

    <!-- Create a divider -->
    <View
        android:layout_height="2dp"
        android:background="@color/black_text_12" />

    <TableRow>

        <TextView
            android:padding="3dp"
            android:text="@string/x_string"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="?android:textColorSecondary" />

        <TextView
            android:padding="3dp"
            android:text="@string/import_string"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="?android:textColorSecondary" />
    </TableRow>

    <TableRow>

        <TextView
            android:padding="3dp"
            android:text="@string/x_string"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="?android:textColorSecondary" />

        <TextView
            android:padding="3dp"
            android:text="@string/export_string"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="?android:textColorSecondary" />

        <TextView
            android:gravity="right"
            android:padding="3dp"
            android:text="@string/ctrl_e_string"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="?android:textColorSecondary" />
    </TableRow>

    <View
        android:layout_height="2dp"
        android:background="@color/black_text_12" />

    <TableRow>

        <TextView
            android:layout_column="1"
            android:padding="3dp"
            android:text="@string/quit_string"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="?android:textColorSecondary" />
    </TableRow>

</TableLayout>