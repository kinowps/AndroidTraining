<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_padding"
    android:paddingRight="@dimen/activity_horizontal_padding"
    android:paddingTop="@dimen/activity_vertical_padding"
    android:paddingBottom="@dimen/activity_vertical_padding"
    tools:context=".HelloAndroidWithImageViewActivity">

    <ImageView
        android:id="@+id/android"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:background="@drawable/ic_launcher"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/image_padding"
        android:contentDescription="@string/android_image_desc_string"
        />

    <TextView
        android:id="@+id/hello_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/android"
        android:layout_centerHorizontal="true"
        android:textAppearance="@android:style/TextAppearance.Material.Display3"
        android:textColor="@android:color/holo_green_light" />

</RelativeLayout>
